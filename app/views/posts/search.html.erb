<div class="container">
  <div class="col-md-10">

	<h1><span class="bg-info">場所検索</span></h1>
	<h4>場所から投稿を検索することができます</h4>

		<!--検索入力フォーム-->
		<%= form_with url: search_posts_path, method: :get, local: true do |f| %>
		  <%= f.text_field :place, :size=>"60"%>
		  <%= f.submit :検索 %>
		<% end %>
		<!--検索入力フォームここまで-->

		<table class="table">
		  <thead>
		    <tr>
		      <th class="td">検索結果</th>
		      <th></th>
		      <th></th>
		      <th>投稿者</th>
		    </tr>
		  </thead>

		  <tbody >
			  <% @posts.each do |post| %>
				<tr>
				   <td>
					 <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
					 <%= post.place %>
				   </td>
				   <td class="td">
					  <%= link_to post_path(post.id) do %>
						<%= attachment_image_tag post, :image, :fill, 200, 100 %>
					  <% end %>
				   </td>
				   <td><%= link_to post.title , post_path(post.id) %></td>
				   <td>
					  <%= link_to user_path(post.user_id) do %>
						<%= post.user.name %>
					  <% end %>
				   </td>
				</tr>
			  <% end %>
		  </tbody>
		</table>

  </div>
</div>