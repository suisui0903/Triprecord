  <div class="container">

	<div class="row">
	<!--プロフィール情報-->
	   <div class="col-xs-3">
	   	<%= flash[:notice] %>
		  <div class="aicon">
			<%= attachment_image_tag @user, :profile_image %>
		  </div>

		  <table class="table">
		  	<tbody>
			  <tr>
				<h1><%= @user.name %></h1>
			  </tr>
			  <tr>
				<td><%= @user.introduction %></td>
			  </tr>
			  <tr>
				<td>
				  <% if @user == current_user %>
				    <%= link_to "編集", edit_user_path(current_user) ,class: "btn-gradient-radius" %>
				  <% end %>
				</td>
			  </tr>
			</tbody>
		  </table>
	   </div>
	<!--プロフィール情報ここまで-->

	<!--投稿一覧-->
	   <div class="col-xs-9">
		  <div class="back">
			<h2><span class="bg">投稿一覧</span></h2>
			<% @posts.each do |post| %>
				<%= link_to post_path(post.id) do %>
				  <%= attachment_image_tag post, :image, :fill, 100, 200 %>
				<% end %>
			<% end %>
		  </div>
	<!--投稿一覧ここまで-->
	<!--お気に入り一覧-->
		  <div class="back2">
			<h2><span class="bg">お気に入り一覧</span></h2>
	        <% @favorites.each do |favorite| %>
			    <% post = Post.find(favorite.post_id) %>
			        <%= link_to post_path(post.id) do %>
					  <%= attachment_image_tag post, :image, :fill, 100, 200 %>
					<% end %>
	        	<% end %>
		  </div>
	<!--お気に入り一覧ここまで -->
	   </div>

  </div>

